</head>

<body>
    <div class="container">

	<br>
	<div class="row">
	    <div class="span2">
		<center>
		    <ul class="breadcrumb" style="height:14px">
			<li><a href="/"><b>O</b></a> <span class="divider">/</span></li>
			<li class="active"><b>Publish</b></li>
		    </ul>
		</center>
	    </div>

	    <div class="span5">
		<% if (!extra.type) { %>
		<input id="type" style="width:100%;" type="text" placeholder="Name of algorithm or code">
		<% } %>
		<% if (extra.type) { %>
		<input id="type" style="width:100%;" type="text" value="<%= extra.type %>" >
		<% } %>
	    </div>

	    <div class="span5">
		<div class="btn-group">
		    <a id="selectedLanguage" class="btn dropdown-toggle" data-toggle="dropdown" href="#">
			Java 
			<span class="caret"></span>
		    </a>
		    <ul id="languages" class="dropdown-menu">
			<li><a>Haskell</a></li>
			<li><a>Java</a></li>
			<li><a>Python</a></li>
		    </ul>
		</div>
	    </div>
	</div>

	<ul id="options" class="nav nav-tabs">
	    <li id="typeLI" class="active">
		<a id="type" href="#">Type code</a>
	    </li>
	    <li id="gistLI">
		<a id="gist" href="#gistModal" data-toggle="modal">Get from Gist</a>
	    </li>
	    <li id="uploadLI"><a href="#" id="upload">Upload code</a></li>
	</ul>

	<!-- Gist Modal -->
	<div id="gistModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="myModalLabel">Grab code from <a href="https://gist.github.com/discover" target="_blank">Gist</a></h3>
	    </div>
	    <div class="modal-body">
		<input id="gistURL" type="text" style="width:95%;" placeholder="Enter Gist URL">
	    </div>
	    <div class="modal-footer">
		<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
		<button id="gistOK" class="btn btn-primary" data-dismiss="modal">Ok</button>
	    </div>
	</div>

